{% extends 'baseTicket.html.twig' %}

{% block title %}Report
{% endblock %}

{% block body %}

	<body>
		<!-- ##### Header Area Start ##### -->

		<!-- ##### Header Area End ##### -->

		<!-- ##### Hero Area Start ##### -->


		<!-- Single Hero Slide -->
			<div
			class="single-hero-slide d-flex align-items-center justify-content-center"> <!-- Slide Img -->
			<div class="slide-img bg-img" style="background-image: url({{asset('Aziz/assets/img/bg-img/bg-2.jpg')}});"></div>
			<!-- Slide Content -->
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="hero-slides-content text-center">
							<h6 data-animation="fadeInUp" data-delay="100ms">SEND A TICKET</h6>
							<h2 data-animation="fadeInUp" data-delay="300ms">Magnum REPORT
								<span>Magnum REPORT</span>
							</h2>

							<br>






							{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
							<center>


								<section class="contact-area section-padding-100 bg-img bg-overlay bg-fixed has-bg-img" style="background-image: url(img/bg-img/bg-2.jpg);">

              
                
									<div class="container">

										<label for="inputText" class="col-sm-4 col-form-label">USERID
										</label>
										<div class="col-sm-10">
											{{ form_widget(f.userid,{'attr':{'class':'form-control'}}) }}

										</div>
										{{ form_errors(f.userid,{'attr':{'class':'text-danger'}}) }}


										<label for="inputText" class="col-sm-4 col-form-label">SUBJECT</label>
										<div class="col-sm-10">
											{{ form_widget(f.subject,{'attr':{'class':'form-control'}}) }}

										</div>
										{{ form_errors(f.subject,{'attr':{'class':'text-danger'}}) }}


										<label for="inputText" class="col-sm-4 col-form-label">Description</label>
										<div class="col-sm-10">
											{{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}

										</div>
										{{ form_errors(f.description,{'attr':{'class':'text-danger'}}) }}


										<label>DATE</label>
										<div>
											{{ form_widget(f.creationdate)}}

										</div>
										{{ form_errors(f.creationdate)}}


										<br>


										<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

											{{ form_widget(f.NEXT,{'attr':{'class':'btn btn-primary'}}) }}
										</div>


									</section>


								</center>
								{{ form_end(f) }}




								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</section></body></div>{% endblock %}
