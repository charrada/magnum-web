{% extends 'back/back.base.html.twig' %}

{% block body %}

    <div class="container-fluid">

       

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                
                  <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Offers list</h1>
                        <a href="{{path("orderspdf")}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-download fa-sm text-white-50"></i> Generate PDF file</a>
                  </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Podcaster Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Image</th>
                        </tr>
                        </thead>

                        <tbody> 
                        {% for ofs in offers %}
                            <tr>
                            <td>{{ ofs.user.username}}</td>
                                <td>{{ ofs.description }}</td>
                                <td>{{ ofs.price }}</td>
                                <td> <img width="20%" height="20%" src="{{ asset('img/ofs-img/'~ ofs.Image) }}" alt=""></td>

                            </tr>
                        {% endfor %}
                     


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->



{% endblock %}